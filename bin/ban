#!/usr/bin/env bash

main() {
    t=''
    s="Foobar"

    while getopts t:s: arg
    do
        case $arg in
            t) t=$OPTARG ;;
            s) s=$OPTARG ;;
            *) print_usage "Help";;
        esac
    done

    case "$t" in
        c*|kotlin) figlet -w 118 -c "$s" | sed -e "s/^/\/\/ /" | awk '{printf("%-119s\n", $0);}' | sed -e "s/$/\/\//" ;;
        sh) figlet -w 118 -c "$s" | sed -e "s/^/#/" | awk '{printf("%-119s\n", $0);}' | sed -e "s/$/#/" ;;
        lua) figlet -w 118 -c "$s" | sed -e "s/^/-- /" | awk '{printf("%-118s\n", $0);}' | sed -e "s/$/--/" ;;
        *)
            echo "$s"
            exit 1
            ;;
    esac
}

main "$@"
